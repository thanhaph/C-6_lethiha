@page "/list"


@inject ISinhVienService _service

<h3>ListSV</h3>

<h1> thanh cong </h1>
<a href="/them" class="btn btn-primary">Them sinh vien</a>




@if (listsv == null)
{
    <h1>Dang tai ds...</h1>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Age</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in listsv)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                </tr>
            <td>
                <a href="/Sua/@item.Id" class="btn btn-warning">Sửa</a>
                <a href="/delete/@item.Id" class="btn btn-danger">Xóa</a>
            </td>
            }
        </tbody>
    </table>
}
@code {
    public List<SinhVien> listsv { get; set; }


    protected async override Task OnInitializedAsync()
    {
        listsv = await _service.GetAll();
    }
}
